{
    "manifest_version": 3,
    "name": "Gmail Dark Souls Email Sent",
    "version": "1.0",
    "description": "Replaces Gmail's sent confirmation with a Dark Souls-style overlay.",
    "permissions": [],
    "web_accessible_resources": [
      {
        "resources": ["assets/*"],
        "matches": ["https://mail.google.com/*"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ]
  }
  